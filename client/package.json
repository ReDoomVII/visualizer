{
	"name": "muvisalizer",
	"private": true,
	"version": "0.1.5",
	"description": "My Awesome Visualizer Client",
	"author": "roubilibo",
	"type": "module",
	"main": "electron/main.js",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"lint": "eslint .",
		"preview": "vite preview",
		"start-electron": "electron .",
		"dist": "npm run build && electron-builder"
	},
	"dependencies": {
		"lucide-react": "^0.539.0",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"tree-kill": "^1.2.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@tailwindcss/vite": "^4.1.11",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-react": "^5.0.0",
		"electron": "^37.3.0",
		"electron-builder": "^26.0.12",
		"eslint": "^9.33.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"tailwindcss": "^4.1.11",
		"vite": "^7.1.2"
	},
	"build": {
		"appId": "com.obil.muvisualizer",
		"productName": "MuVisualizer",
		"files": [
			"dist/**/*",
			"electron/**/*"
		],
		"directories": {
			"buildResources": "assets",
			"output": "release"
		},
		"extraResources": [
			{
				"from": "../server/dist/main.exe",
				"to": "backend/main.exe",
				"filter": [
					"**/*"
				]
			}
		]
	}
}
